<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp"
        android:id="@+id/cv"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">
    <LinearLayout
        android:id="@+id/uppercontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">
        <ImageView
            android:gravity="center"
            android:id="@+id/imagemview_profile_picture_post_redor"
            android:layout_width="50dp"
            android:paddingLeft="6dp"
            android:layout_gravity="center"
            android:layout_height="50dp"/>

        <postaround.tcc.inatel.br.Utils.PostAiTextView
            android:maxLength="18"
            android:textStyle="bold"
            android:text="Carol Tenório"
            android:paddingLeft="6dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="#FF9800"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_nomeUsuario" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hiddentext"/>
    </LinearLayout>

      <ImageView
          android:adjustViewBounds="true"
          android:scaleType="fitXY"
          android:layout_gravity="center"
            android:layout_below="@id/post_nomeUsuario"
            android:id="@+id/imageView_post_picture_post_redor"
            android:layout_width="fill_parent"
            android:layout_height="300dp"


            />

            <postaround.tcc.inatel.br.Utils.PostAiTextView
                android:maxLength="50"
                android:paddingLeft="6dp"
                android:id="@+id/post_titulo"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

            <postaround.tcc.inatel.br.Utils.PostAiTextView
                android:maxLength="100"
                android:layout_below="@id/post_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:id="@+id/post_descricao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:orientation="horizontal">
                <postaround.tcc.inatel.br.Utils.PostAiTextView
                    android:id="@+id/tvComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 comentários"
                    android:paddingLeft="40dp"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
