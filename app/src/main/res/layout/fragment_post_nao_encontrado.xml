<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="postaround.tcc.inatel.br.fragment.PostNaoEncontradoFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/swipe_meu_post_nao_encontrado">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view__meu_post_nao_encontrado"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_sad_face"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <postaround.tcc.inatel.br.Utils.PostAiTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nenhum_post_encontrado"
            android:textSize="23sp"
            android:paddingTop="10dp"
            android:layout_gravity="center" />

        <postaround.tcc.inatel.br.Utils.PostAiTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crie_novo_post_ao_redor"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>
