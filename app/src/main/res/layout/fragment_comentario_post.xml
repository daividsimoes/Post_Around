<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="postaround.tcc.inatel.br.postaround.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:paddingBottom="10dp">

        <postaround.tcc.inatel.br.Utils.PostAiTextView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/textview_conteudo_post_detalhado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="vamos lÃ¡!!! reta final!!!"
            />
    </LinearLayout>

    <View android:id="@+id/separator"
        android:background="@color/gray"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view_comments"
        android:layout_gravity="fill_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        tools:context="postaround.tcc.inatel.br.postaround.ScrollingActivity"
        tools:showIn="@layout/activity_scrolling"/>

</LinearLayout>
